Host *
     ControlPath ~/.ssh/.%h.%p.%r
     ControlMaster auto
     ControlPersist 600
     CheckHostIP yes
     Compression yes
     HashKnownHosts yes
     ForwardAgent yes
     ForwardX11 yes
     TCPKeepAlive no
     ServerAliveInterval 30
     ServerAliveCountMax 10
     IdentitiesOnly yes

Host bitbucket.org
     PreferredAuthentications publickey
     IdentityFile ~/.ssh/bitbucket
     ControlPersist 60
     ForwardX11 no

Host git.code.sf.net
     PreferredAuthentications publickey
     IdentityFile ~/.ssh/sourceforge
     ForwardX11 no
